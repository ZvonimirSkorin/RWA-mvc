  background-color: #45a049;
}

/* Add a background color and some padding around the form */
.kontakt {
  border-radius: 5px;
  background-color: #f2f2f2;
  padding: 20px;
}
</style>
<script>
function objectifyForm(formArray) {
    //serialize data function
    var returnArray = {};
    for (var i = 0; i < formArray.length; i++){
        returnArray[formArray[i]['name']] = formArray[i]['value'];
    }
    return returnArray;
}
    let interval2 = setInterval(()=>{
       
            if(!$('#contactForm')) return;
            const queryString = window.location.search;
const parameters = new URLSearchParams(queryString);
const apartmentId = parameters.get('Id')
         $('#contactForm').submit(function(e) {
            e.preventDefault();
          const formData = $( "#contactForm" ).serializeArray()
          
              $.ajax({
        url: `/Api/Reserve`,
        dataType: "json",
        type: "post",
        async: true,
        data:{...objectifyForm(formData), apartmentId},
        success: function(){
            window.location.reload();
        },
    	error: function(){
    		alert("There was an error.");
    	}
          })
        
          })

          
          $.ajax({
        url: `/Api/Me`,
        dataType: "json",
        type: "get",
        async: true,
        success: function(data){
            const [ime, prezime] = data?.userName?.split(" ");
            const {email, address, phone} = data;
            
            if(email)
            document.getElementById('email').value = email;
            if(ime)
            document.getElementById('ime').value = ime;
            if(prezime)
            document.getElementById('prezime').value = prezime;
            if(address)
            document.getElementById('address').value = address; 
            if(phone)
            document.getElementById('phone').value = phone;
        }
        })
        clearInterval(interval2);
        },100)

        
    </script>
